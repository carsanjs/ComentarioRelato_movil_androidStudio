<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00A1FE"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="406dp"
        android:layout_height="657dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/ly_1"
            android:layout_width="414dp"
            android:layout_height="652dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imgloginn"
                android:layout_width="350dp"
                android:layout_height="197dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/img" />

            <TextView
                android:id="@+id/view_Sesion"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/bluee_principal"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="@string/str_iniciar"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ly_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dynamic_neutral_90"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinputcorreo"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_correo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:hint="Correo Electronico"
                        android:inputType="text|textEmailAddress"
                        android:textColorHighlight="#3F51B4"
                        android:textColorLink="#3F51B4" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinpoutpass"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_pass"
                        android:layout_width="281dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:hint="Contraseña"
                        android:inputType="number|numberPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_sesion"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:backgroundTint="@color/btn_red_radius"
                    android:fontFamily="casual"
                    android:text="@string/btn_iniciar"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_o"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="ó"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="272dp"
                android:layout_height="97dp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp">

                <Button
                    android:id="@+id/btn_createcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green_btncounts"
                    android:fontFamily="casual"
                    android:text="@string/str_nothavecount"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>